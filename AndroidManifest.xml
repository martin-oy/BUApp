<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="martin.app.bitunion"
    android:versionCode="15"
    android:versionName="1.0.4" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:name=".BUApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Default" >
        <meta-data
            android:name="martin.app.bitunion.util.SyncedVolleyGlideModule"
            android:value="GlideModule" />

        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="martin.app.bitunion.MainActivity" />
        </activity>
        <activity
            android:name=".DisplayActivity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="martin.app.bitunion.MainActivity" />
        </activity>
        <activity
            android:name=".ThreadActivity"
            android:parentActivityName=".DisplayActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="martin.app.bitunion.DisplayActivity" />
        </activity>
        <activity
            android:name=".MyinfoActivity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="martin.app.bitunion.MainActivity" />
        </activity>
        <activity
            android:name=".NewthreadActivity"
            android:parentActivityName=".DisplayActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="martin.app.bitunion.DisplayActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="martin.app.bitunion.MainActivity" />
        </activity>
        <activity
            android:name=".ImageViewerActivity"
            android:theme="@style/ImageViewerTheme" />
        <activity
            android:name=".RecentListActivity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="martin.app.bitunion.MainActivity" />
        </activity>
    </application>

</manifest>
